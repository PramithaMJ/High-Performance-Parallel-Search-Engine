# Print configuration
info:
	@echo " Build Configuration:"
	@echo "   CUDA Support: $(USE_CUDA)"
	@echo "   OpenMP Support: $(USE_OPENMP)"
	@echo "   MPI Support: $(USE_MPI)"
	@echo "   Compiler: $(CC)"
	@echo "   CUDA Compiler: $(NVCC)"
	@echo "   C Flags: $(CFLAGS)"
	@echo "   CUDA Flags: $(NVCCFLAGS)"
